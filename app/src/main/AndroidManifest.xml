<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.mendelu.xmarik.train_manager">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrainHandler"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_train_handler"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AckTrains"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_ack_trains"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Servers"
            android:launchMode="singleInstance"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
        />
        <activity android:name=".Trains_box"
            android:launchMode="singleInstance"
            android:label="@string/controlArea"
            android:theme="@style/AppTheme.NoActionBar"
        />
        <activity android:name=".ServerConnector"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".NewServer" />
        <activity android:name=".RemoveServer" />

        <activity android:name=".About"
            android:launchMode="singleInstance"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>